{
  "name": "system-capabilities-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para system-capabilities y sus componentes UI",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w packages/core",
    "build:lit": "npm run build -w packages/lit",
    "build:react": "npm run build -w packages/react",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "keywords": [
    "monorepo",
    "system-capabilities",
    "browser-detection"
  ],
  "author": "manufosela",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/manufosela/system-capabilities.git"
  }
}
